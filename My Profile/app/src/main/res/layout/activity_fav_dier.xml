<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.myprofile.FavDierActivity"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/favDier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mink"/>

        <TextView
        android:id="@+id/txtDier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="198dp"
        android:background="#bf8040"
        android:text="Mink"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txtDier"
            android:layout_marginTop="38dp"
            android:background="#bf8040"
            android:text="De Amerikaanse nerts of mink (Neovison vison) is een roofdier uit de familie der marterachtigen (Mustelidae)."
            android:textColor="#fff"
            android:textSize="20sp"/>


    </RelativeLayout>

</LinearLayout>
